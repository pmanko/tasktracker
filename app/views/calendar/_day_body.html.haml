- stickies.with_due_date_for_calendar(current_date, current_date).order('stickies.project_id, stickies.id').group_by(&:tag_ids).reverse_each do |tag_ids, stickies|
  - @tags = Tag.current.where(id: tag_ids)
  %div{ style: 'padding-bottom:5px', id: "day_#{current_date.strftime('%Y%m%d') if current_date}_tag_container_#{tag_ids.sort.join('_')}" }
    - if @tags.size > 0
      .calendar-entry-name
        - @tags.each do |tag|
          %span.label{ style: "background-color: #{tag.color}" }= tag.name
    - stickies.sort{|a,b| a.due_date <=> b.due_date}.each do |sticky|
      = render 'stickies/popup', sticky: sticky
