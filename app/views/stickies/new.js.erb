<% if current_user.all_projects.size == 0 %>
  <% @project = current_user.projects.new %>
  $("#sticky-modal-new").find('.modal-content').html("<%= escape_javascript(render partial: 'projects/new_modal') %>");
  $("#sticky-modal-new").modal('show');
  $("#project_name").focus();
<% elsif @sticky.project %>
  $("#sticky-modal-new").find('.modal-content').html("<%= escape_javascript(render partial: 'stickies/edit_modal') %>");
  initializeTypeahead();
  loadDatePicker();
  loadTimePicker();
  $("#sticky-modal-new").modal('show');
  $("#sticky_description").focus();
<% else %>
  $("#sticky-modal-new").find('.modal-content').html("<%= escape_javascript(render partial: 'stickies/select_project') %>");
  $("#sticky-modal-new").modal('show');
<% end %>

<% @sticky.errors.each do |key, value| %>
  $('#sticky_<%= key %>').parent().parent().addClass('error');
<% end %>

resetSubmitButtons();
