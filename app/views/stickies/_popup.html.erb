<% cache [ "stickies-popup-v15", sticky ] do %>
  <div
      class="stickies_<%= sticky.completed ? 'completed' : 'planned' %> project_<%= sticky.project_id %> sticky_popup calendar-entry-name"
      id="sticky_<%= sticky.id %>_popup"
      onmouseover="if(!$('#sticky_<%= sticky.id %>_wait').is(':visible')){$('#sticky_<%= sticky.id %>_empty').hide();$('#sticky_<%= sticky.id %>_checkmark').show()}"
      onmouseout="if(!$('#sticky_<%= sticky.id %>_wait').is(':visible')){$('#sticky_<%= sticky.id %>_checkmark').hide();$('#sticky_<%= sticky.id %>_empty').show()}"
      <%= "data-grouped=grouped" if sticky.group %>
      data-due-date="<%= sticky.due_date.strftime("%Y%m%d") if sticky.due_date %>"
  >
    <table><col width="12px" />
      <tr>
        <td style="margin:0px;padding:0px">
          <span id="sticky_<%= sticky.id %>_icon">
            <% if sticky.completed? %>
              <%= image_tag 'gentleface/16/checkmark.png', alt: '', size: '10x10' %>
            <% elsif sticky.modifiable_by?(current_user) %>
              <%= image_tag 'colorpicker/blank.gif', alt: '', id: "sticky_#{sticky.id}_empty", size: '10x10' %>
              <%= image_tag 'contour/ajax-loader.gif', alt: '', id: "sticky_#{sticky.id}_wait", size: '10x10', style: 'display:none' %>
              <%= link_to image_tag('gentleface/16/checkbox_unchecked.png', alt: '', size: '10x10'), complete_sticky_path(sticky, from: 'checkbox'), method: :post, remote: true, id: "sticky_#{sticky.id}_checkmark", style: 'display:none', onclick: "$('#sticky_#{sticky.id}_checkmark').hide();$('#sticky_#{sticky.id}_wait').show()" %>
            <% else %>
              <%= image_tag 'colorpicker/blank.gif', alt: '', size: '10x10' %>
            <% end %>
          </span>
        </td>
        <td style="margin:0px;padding:0px">
          <b><%= sticky.due_time unless sticky.all_day? %></b>
          <span id="sticky_<%= sticky.id %>_name">
            <%= link_to strip_tags(simple_markdown sticky.full_description).truncate(27, separator: ' ').html_safe, sticky_path(sticky, from: 'month'), remote: true, method: :get, class: "project_#{sticky.project_id}_color", style: (sticky.completed? ? 'text-decoration:line-through' : ''), rel: "popover", data: { title: sticky.project.name, content: simple_markdown(sticky.description_html).gsub('"', '\\"'), html: true, placement: (sticky.due_date and sticky.due_date.wday == 6 ? 'left' : 'right'), trigger: 'hover' }, style: 'color:white' %>
          </span>
        </td>
      </tr>
    </table>
  </div>
<%# end %>
