- @title = @board.name
.page-header
  %h1
    = link_to @board.project.name, @board.project
    &middot;
    = link_to 'Boards', boards_path(project_id: @board.project_id)
    &middot;
    = @title
  - if current_user.all_boards.include?(@board)
    = link_to 'Edit Board', edit_board_path(@board), class: 'btn btn-xs btn-default'
    = link_to 'Delete Board', @board, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Board #{@board.name}?" }

%dl.dl-horizontal
  %dt Creator
  %dd= link_to @board.user.name, @board.user if @board.user

  %dt Description
  %dd= simple_format @board.description

  %dt Archived
  %dd= simple_check @board.archived

