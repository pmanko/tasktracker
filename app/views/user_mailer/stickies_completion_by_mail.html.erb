<%= @sender.name %> <span style="padding:5px;background-color:#428bca;color:white">completed</span> the following <%= pluralize(@stickies.count, 'Task') %>.<br />

<% if @stickies.size > 0 %>
  <br />

  <table style="width:100%;border:0px;border-collapse:collapse;margin:0px;padding:0px;color:#505050;font-family:Arial;font-size:14px;">
    <% @stickies.group_by{|s| s.project_id}.each do |project_id, stickies| %>
      <tr><td colspan="3" style="border-top:1px solid #ddd;"></td></tr>
      <tr><td colspan="3" style="text-align:left;padding-top:10px;padding-right:20px;padding-bottom:10px;font-weight:bold"><%= ((project = Project.find_by_id(project_id)) ? link_to(project.name, "#{ENV['website_url']}/projects/#{project.id}", style: "color: #428bca") : 'No Project') %></td></tr>
      <% stickies.each do |sticky| %>
        <tr><%= @sticky = sticky; render partial: 'digest_sticky' %></tr>
      <% end %>
      <tr><td colspan="7" style="padding-bottom:10px"></td></tr>
    <% end %>
  </table>
  <br />
<% end %>
