%table{ style: 'width:100%;border:0px;border-collapse:collapse;margin:0px;padding:0px;color:#505050;font-family:Arial;font-size:14px;' }
  %thead
    %tr{ style: 'text-align:left' }
      %th Project
      %th Task
      %th Due Date
      %th
      %th Assigned To
      %th
      %th Tags
  - stickies.order(:due_date).group_by { |s| s.project_id }.each do |project_id, stickies|
    %tr
      %td{ colspan: 7, style: 'border-top:1px solid #ddd;' }
    %tr
      %td{ style: 'text-align:left;padding-top:10px;padding-right:20px;font-weight:bold' }
        - project = Project.current.find_by_id(project_id)
        - if project
          = link_to project.name, "#{ENV['website_url']}/projects/#{project.id}", style: link_style
        - else
          No Project
      %td{ colspan: 6 }
    - stickies.each do |sticky|
      %tr{ style: "#{'background-color:#c2daff' if @sticky && @sticky.id == sticky.id}" }
        = render 'sticky_line_item', sticky: sticky
    %tr
      %td{ colspan: 7, style: 'padding-bottom:10px' }
%br
