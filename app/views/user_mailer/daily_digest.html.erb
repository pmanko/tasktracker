<%= render partial: 'email_header' %>

<b>Dear <%= @recipient.first_name %>,</b><br />

<% if @recipient.digest_stickies_completed.size > 0 %>
  <br />
  <br />
  <table style="width:100%;border:0px;border-collapse:collapse;margin:0px;padding:0px;color:#505050;font-family:Arial;font-size:14px;">
    <thead>
      <tr style="text-align:left">
        <th colspan="3" style="padding-bottom:10px;font-weight:normal">
          <span style="padding:5px;background-color:#428bca;color:white">Completed</span> Recently
        </th>
      </tr>
    </thead>

    <% @recipient.digest_stickies_completed.group_by{|s| s.project_id}.each do |project_id, stickies| %>
      <tr><td colspan="3" style="border-top:1px solid #ddd;"></td></tr>
      <tr><td colspan="3" style="text-align:left;padding-top:10px;padding-right:20px;padding-bottom:10px;font-weight:bold"><%= ((project = Project.find_by_id(project_id)) ? link_to(project.name, "#{SITE_URL}/projects/#{project.id}", style: "color: #428bca") : 'No Project') %></td></tr>
      <% stickies.each do |sticky| %>
        <tr><%= @sticky = sticky; render partial: 'digest_sticky' %></tr>
      <% end %>
      <tr><td colspan="7" style="padding-bottom:10px"></td></tr>
    <% end %>
  </table>
<% end %>

<% if @recipient.digest_comments.size > 0 %>
  <br />
  <br />
    <table style="width:100%;border:0px;border-collapse:collapse;margin:0px;padding:0px;color:#505050;font-family:Arial;font-size:14px;">
    <thead>
      <tr style="text-align:left">
        <th colspan="3" style="padding-bottom:10px;font-weight:normal">
          <span style="padding:5px;background-color:#f0ad4e;color:white">Comments</span>
        </th>
      </tr>
    </thead>
    <% @recipient.digest_comments.group_by{|s| s.project_id}.each do |project_id, comments| %>
      <tr><td colspan="3" style="border-top:1px solid #ddd;"></td></tr>
      <tr><td colspan="3" style="text-align:left;padding-top:10px;padding-right:20px;padding-bottom:10px;font-weight:bold"><%= ((project = Project.find_by_id(project_id)) ? link_to(project.name, "#{SITE_URL}/projects/#{project.id}", style: "color: #428bca") : 'No Project') %></td></tr>
      <% comments.group_by{|s| s.sticky_id}.each do |sticky_id, comments| %>
        <tr><td colspan="3" style="text-align:left;padding-top:10px;padding-right:20px;padding-bottom:10px;font-weight:bold"><%= ((sticky = Sticky.find_by_id(sticky_id)) ? link_to(sticky.name, "#{SITE_URL}/stickies/#{sticky.id}", style: "color: #428bca") : 'No Task') %> <%= strip_tags(simple_markdown sticky.full_description).truncate(50, separator: ' ').html_safe %></td></tr>
        <% comments.each do |comment| %>
          <tr><%= @comment = comment; render partial: 'digest_comment' %></tr>
        <% end %>
      <% end %>
      <tr><td colspan="7" style="padding-bottom:10px"></td></tr>
    <% end %>
  </table>
<% end %>

<% if @recipient.digest_stickies_created.size > 0 %>
  <br />
  <br />
  <table style="width:100%;border:0px;border-collapse:collapse;margin:0px;padding:0px;color:#505050;font-family:Arial;font-size:14px;">
    <thead>
      <tr style="text-align:left">
        <th colspan="3" style="padding-bottom:10px;font-weight:normal">
          <span style="padding:5px;background-color:#5cb85c;color:white">Added</span> Recently
        </th>
      </tr>
    </thead>

    <% @recipient.digest_stickies_created.group_by{|s| s.project_id}.each do |project_id, stickies| %>
      <tr><td colspan="3" style="border-top:1px solid #ddd;"></td></tr>
      <tr><td colspan="3" style="text-align:left;padding-top:10px;padding-right:20px;padding-bottom:10px;font-weight:bold"><%= ((project = Project.find_by_id(project_id)) ? link_to(project.name, "#{SITE_URL}/projects/#{project.id}", style: "color: #428bca") : 'No Project') %></td></tr>
      <% stickies.each do |sticky| %>
        <tr><%= @sticky = sticky; render partial: 'digest_sticky' %></tr>
      <% end %>
      <tr><td colspan="7" style="padding-bottom:10px"></td></tr>
    <% end %>
  </table>
<% end %>

<%= render partial: 'email_footer' %>
