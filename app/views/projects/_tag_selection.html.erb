<% if @project_id and project = Project.find_by_id(@project_id) and project.tags.size > 0 %>
  <div class="form-group">
    <%= label :sticky, :tag_ids, 'Tags', class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <div class="row">
        <% project.tags.each do |tag| %>
          <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
            <label class="checkbox tag-checkbox <%= 'tag-selected' if @sticky.tags.include?(tag) %>" style="margin-bottom: 10px;background-color: <%= tag.color %>">
              <%= check_box_tag "sticky[tag_ids][]", tag.id, @sticky.tags.include?(tag) %>
              <div class="tag-name" style="overflow:hidden;white-space:nowrap">
                <%= tag.name %>
              </div>
            </label>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
