<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for(@project, html: { class: 'form-horizontal' }) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved</h4>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_area :description, rows: 7, style: 'width:95%' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.select :status, Project::STATUS %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :start_date, class: 'datepicker form-control', value: @project.start_date ? @project.start_date.strftime('%m/%d/%Y') : '' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :end_date, class: 'datepicker form-control', value: @project.end_date ? @project.end_date.strftime('%m/%d/%Y') : '' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= cancel %>
    </div>
  </div>
<% end %>
