- btn_class = @project.favorited_by?(current_user) ? 'btn-default' : 'btn-success'

= link_to project_favorites_favorite_path(project_id: @project, favorite: @project.favorited_by?(current_user) ? '0' : '1'), remote: true, method: :post, class: "btn btn-xs #{btn_class}" do
  - if @project.favorited_by?(current_user)
    %span.glyphicon.glyphicon-star-empty
    Unfavorite
  - else
    %span.glyphicon.glyphicon-star
    Add to Favorites
