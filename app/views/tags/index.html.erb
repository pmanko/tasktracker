<% @title = 'Tags' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if @project %><small>Project <%= link_to @project.name, @project %></small><% end %>
    <%= link_to "Create Tag", (@project ? new_tag_path(tag: { project_id: @project.id }) : new_tag_path), class: 'btn btn-xs btn-primary' %>
  </h1>
</div>

<%= form_tag tags_path, method: :get, remote: true, id: "tags_search", class: 'form-inline', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= hidden_field_tag :project_id, params[:project_id] %>
  <%= text_field_tag 'search', params[:search], class: 'form-control' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="tags"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
