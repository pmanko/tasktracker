- @title = @tag.name
.page-header
  %h1
    = link_to @tag.project.name, @tag.project
    &middot;
    = link_to 'Tags', tags_path(project_id: @tag.project_id)
    &middot;
    = @title
  - if current_user.all_tags.include?(@tag)
    = link_to 'Edit Tag', edit_tag_path(@tag), class: 'btn btn-xs btn-default'
    = link_to 'Delete Tag', @tag, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Tag #{@tag.name}?" }

%dl.dl-horizontal
  %dt Description
  %dd= simple_format @tag.description

  %dt Creator
  %dd= link_to @tag.user.name, @tag.user if @tag.user

  %dt Color
  %dd
    %span.label{ style: "line-height:20px;background-color:#{@tag.color}" }= @tag.color

