<%= render partial: 'layouts/per_page', locals: { type: 'comments', count: @comments.total_count } %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Sticky</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

<% @comments.each do |comment| %>
  <tr>
    <td style="white-space:nowrap"><%= link_to comment.name, comment %></td>
    <td><%= link_to comment.user.name, comment.user %></td>
    <td><%= link_to comment.sticky.name, comment.sticky if comment.sticky %></td>
    <td><%= comment.description %></td>
    <td>
      <%= link_to "Edit", edit_comment_path(comment), class: 'btn btn-xs' if comment.modifiable_by?(current_user) %>
      <%= link_to 'Delete', comment, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Comment #{comment.name}?" } if comment.deletable_by?(current_user) %>
    </td>
  </tr>
<% end %>
</table>

<center><%= paginate @comments, theme: "contour" %></center>
