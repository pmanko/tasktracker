<% @title = 'Comments' %>
<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_tag comments_path, method: :get, remote: true, id: "comments_search", class: 'form-inline', data: { object: 'form-load' } do %>
  <%= text_field_tag 'search', params[:search], class: 'form-control' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="comments"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>
