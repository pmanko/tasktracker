<% @title = "#{@user.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <small><%= @user.email %></small>
    <% if current_user.system_admin? %>
      <%= link_to "Edit User", edit_user_path(@user), class: 'btn btn-mini' %>
      <%= link_to 'Delete User', @user, method: :delete, class: 'btn btn-mini btn-danger-inverse', data: { confirm: "Are you sure you want to delete User #{@user.name}?" } unless current_user == @user %>
      <%= link_to "View Users", users_path, class: 'btn btn-mini' %>
    <% end %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>User Avatar</dt>
  <dd><%= image_tag @user.avatar_url, class: 'img-rounded' %></dd>

<% if current_user.system_admin? %>
  <dt>Status</dt>
  <dd><%= @user.status %></dd>

  <dt>System Admin</dt>
  <dd><%= @user.system_admin? %></dd>

  <dt>Service Account</dt>
  <dd><%= @user.service_account? %></dd>
<% end %>
</dl>

<div id="user_projects">
  <%= render partial: 'users/projects', locals: { user: @user } %>
</div>
